        workExperience.map(
            ({
                title,
                institutionName,
                startDate,
                finishDate,
                description,
                icon,
                inverted,
            }): iresumeItem => (
                <ResumeItem
                    title={title}
                    institutionName={institutionName}
                    startDate={startDate}
                    finishDate={finishDate}
                    description={description}
                    icon={icon}
                    inverted={inverted}
                />
            )
        )
    }
</section>
