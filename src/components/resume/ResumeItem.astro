---

import '../../styles/resume-item.css'

export interface Props {
    title: string,
    institutionName: string,
    startDate: string,
    finishDate: string,
    description: string,
    icon: string,
    inverted: boolean
}

const { title, institutionName, startDate, finishDate, description, icon, inverted } = Astro.props
---


<li class=`${inverted ? 'timeline-inverted' : 'timeline-unverted'} animate-box`>
    <div class="timeline-badge"><i ><img src={icon} /></i></div>
    <div class="timeline-panel">
        <div class="timeline-heading">
            <h3 class="timeline-title">{title}</h3>
            <span class="company">{institutionName} - {startDate} - {finishDate}</span>
        </div>
        <div class="timeline-body">
            <p>
                {description}
            </p>
        </div>
    </div>
</li>