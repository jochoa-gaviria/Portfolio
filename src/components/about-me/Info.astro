---
import "../../styles/info.css";
import InfoItem from "./InfoItem.astro";

interface item {
    firstBlock: string;
    secondBlock: string;
}

const items = [
    {
        firstBlock: "Full Name",
        secondBlock: "Juan David Ochoa Gaviria",
    },
    {
        firstBlock: "Phone",
        secondBlock: "+57 311 743 7028",
    },
    {
        firstBlock: "Email",
        secondBlock: "jochoa.gaviria@hotmail.com",
    },
    {
        firstBlock: "Location",
        secondBlock: "Medellin, Colombia",
    },
];
---

<ul class="info">
    {
        items.map(
            ({ firstBlock, secondBlock }): item => (
                <InfoItem
                    firstBlock={firstBlock}
                    secondBlock={secondBlock}
                />
            )
        )
    }
</ul>
